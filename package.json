{
  "name": "myos_task",
  "version": "1.0.0",
  "description": "An ecommerce store",
  "main": "index.js",
  "scripts": {
    "server-test": "mocha ./server/tests/*.test.js --timeout 10000",
    "client-test": "cd client && npm run test",
    "start": "nodemon index.js",
    "heroku-postbuild": "cd client && npm install && npm run build",
